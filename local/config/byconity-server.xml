<?xml version="1.0" ?>
<yandex>
    <catalog>
        <name_space>byconity</name_space>
    </catalog>
    <logger>
        <level>trace</level>
        <log>/data/byconity/log/server.log</log>
        <errorlog>/data/byconity/log/server.err.log</errorlog>
        <testlog>/data/byconity/log/server.test.log</testlog>
        <size>1000M</size>
        <count>10</count>
    </logger>
    <http_port>8123</http_port>
    <rpc_port>8124</rpc_port>
    <tcp_port>9000</tcp_port>
    <ha_tcp_port>9800</ha_tcp_port>
    <exchange_port>9300</exchange_port>
    <exchange_status_port>9400</exchange_status_port>
    <openSSL>
        <server>
            <certificateFile>/etc/byconity/server.crt</certificateFile>
            <privateKeyFile>/etc/byconity/server.key</privateKeyFile>
            <dhParamsFile>/etc/byconity/dhparam.pem</dhParamsFile>
            <verificationMode>none</verificationMode>
            <loadDefaultCAFile>true</loadDefaultCAFile>
            <cacheSessions>true</cacheSessions>
            <disableProtocols>sslv2,sslv3</disableProtocols>
            <preferServerCiphers>true</preferServerCiphers>
        </server>
        <client>
            <loadDefaultCAFile>true</loadDefaultCAFile>
            <cacheSessions>true</cacheSessions>
            <disableProtocols>sslv2,sslv3</disableProtocols>
            <preferServerCiphers>true</preferServerCiphers>
            <invalidCertificateHandler>
                <name>AcceptCertificateHandler</name>
            </invalidCertificateHandler>
        </client>
    </openSSL>
    <interserver_http_port>30977</interserver_http_port>
    <listen_host>::</listen_host>
    <max_connections>4096</max_connections>
    <keep_alive_timeout>3</keep_alive_timeout>
    <max_concurrent_queries>300</max_concurrent_queries>
    <uncompressed_cache_size>8589934592</uncompressed_cache_size>
    <mark_cache_size>5368709120</mark_cache_size>
    <path>/data/byconity/data/</path>
    <tmp_path>/data/byconity/tmp_data/</tmp_path>
    <users_config>/etc/byconity/config/users.xml</users_config>
    <default_profile>default</default_profile>
    <default_database>default</default_database>
    <timezone>Asia/Shanghai</timezone>
    <mlock_executable>false</mlock_executable>
    <remote_servers incl="clickhouse_remote_servers"></remote_servers>
    <macros incl="macros" optional="true"/>
    <builtin_dictionaries_reload_interval>3600</builtin_dictionaries_reload_interval>
    <max_session_timeout>3600</max_session_timeout>
    <default_session_timeout>60</default_session_timeout>
    <dictionaries_config>*_dictionary.xml</dictionaries_config>
    <compression incl="clickhouse_compression">
    </compression>
    <distributed_ddl>
        <path>/data/byconity/task_queue/ddl</path>
    </distributed_ddl>

    <merge_tree>
        <enable_addition_bg_task>1</enable_addition_bg_task>
        <max_addition_bg_task_num>240</max_addition_bg_task_num>
        <max_partition_for_multi_select>10</max_partition_for_multi_select>

        <cnch_merge_enable_batch_select>1</cnch_merge_enable_batch_select>
        <cnch_merge_max_total_rows_to_merge>40000000</cnch_merge_max_total_rows_to_merge>

        <cnch_merge_round_robin_partitions_interval>180</cnch_merge_round_robin_partitions_interval>
        <cnch_merge_select_nonadjacent_parts>true</cnch_merge_select_nonadjacent_parts>

        <old_parts_lifetime>1200</old_parts_lifetime>
        <ttl_for_trash_items>1800</ttl_for_trash_items>
    </merge_tree>

    <prometheus>
        <endpoint>/metrics</endpoint>
        <port>9363</port>
        <metrics>true</metrics>
        <events>true</events>
        <asynchronous_metrics>true</asynchronous_metrics>
        <status_info>true</status_info>
    </prometheus>

    <graphite_rollup_example>
        <pattern>
            <regexp>click_cost</regexp>
            <function>any</function>
            <retention>
                <age>0</age>
                <precision>3600</precision>
            </retention>
            <retention>
                <age>86400</age>
                <precision>60</precision>
            </retention>
        </pattern>
        <default>
            <function>max</function>
            <retention>
                <age>0</age>
                <precision>60</precision>
            </retention>
            <retention>
                <age>3600</age>
                <precision>300</precision>
            </retention>
            <retention>
                <age>86400</age>
                <precision>3600</precision>
            </retention>
        </default>
    </graphite_rollup_example>
    <format_schema_path>/data/byconity/format_schemas/</format_schema_path>
    <cnch_type>server</cnch_type>
    <perQuery>1</perQuery>

    <storage_configuration>
        <cnch_default_policy>cnch_default_hdfs</cnch_default_policy>
        <disks>
            <server_hdfs_prod>
                <path>/olap_byconity_cluster1/</path>
                <type>hdfs</type>
            </server_hdfs_prod>
            <server_hdfs_disk>
                <path>/var/byconity/data/</path>
                <type>hdfs</type>
                <hdfs_user>hdfs_user</hdfs_user>
                <hdfs_addr>hdfs://namenode:8020</hdfs_addr>
                <hdfs_params>
                    <hdfs_user>hdfs_user</hdfs_user>
                    <hdfs_addr>hdfs://namenode:8020</hdfs_addr>
                    <hdfs_nnproxy>hdfs://namenode:8020</hdfs_nnproxy>
                    <hdfs3_config>/etc/byconity/config/hdfs-site.xml</hdfs3_config>
                </hdfs_params>
            </server_hdfs_disk>
            <server_local_0>
                <path>/data/byconity/data/0/</path>
            </server_local_0>
        </disks>
        <policies>
            <default>
                <volumes>
                    <local>
                        <default>server_local_0</default>
                        <disk>server_local_0</disk>
                    </local>
                </volumes>
            </default>
            <cnch_default_hdfs>
                <volumes>
                    <hdfs>
                        <default>server_hdfs_disk</default>
                        <disk>server_hdfs_disk</disk>
                    </hdfs>
                </volumes>
            </cnch_default_hdfs>
            <cnch_hdfs_prod>
                <volumes>
                    <hdfs>
                        <default>server_hdfs_prod</default>
                        <disk>server_hdfs_prod</disk>
                    </hdfs>
                </volumes>
            </cnch_hdfs_prod>
        </policies>
    </storage_configuration>
    <cnch_config>/etc/byconity/config/cnch_config.xml</cnch_config>

    <part_allocation_algorithm>2</part_allocation_algorithm>
    <consistent_hash_ring>
        <num_replicas>16</num_replicas>
        <num_probes>21</num_probes>
        <load_factor>1.3</load_factor>
    </consistent_hash_ring>
    <!-- lru_max_size 1.5Ti -->
    <disk_cache_strategies>
        <simple>
            <cache_set_rate_limit>2000</cache_set_rate_limit>
            <lru_max_size>1649267441664</lru_max_size>
            <meta_cache_size_ratio>15</meta_cache_size_ratio>
        </simple>
    </disk_cache_strategies>
    <cnch_view_refresh_task_log>
        <database>cnch_system</database>
        <table>cnch_view_refresh_task_log</table>
        <flush_max_row_count>10000</flush_max_row_count>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </cnch_view_refresh_task_log>
</yandex>
